<h1>Sign Up!</h1> <br>
<strong><%= @user.errors.full_messages.first if @user.errors %></strong>


<%= form_for @user, :html => {:class => "form-horizontal center"} do |f| %>
<div class="form-group row">
  <%=f.label :name, class: "col-xs-2 col-form-label"  %>
  <div class="col-xs-10">
  <%=f.text_field :name, class:"form-control" %>
  </div>
</div>

<div class="form-group row">
  <%=f.label :username, class: "col-xs-2 col-form-label"  %>
  <div class="col-xs-10">
    <%=f.text_field :username, class:"form-control" %>
  </div>
</div>

<div class="form-group row">
  <%=f.label :password, class: "col-xs-2 col-form-label"  %>
  <div class="col-xs-10">
      <%=f.password_field :password, class:"form-control" %>
  </div>
</div>

<div class="form-group row">
  <%=f.label :password_confirmation, class: "col-xs-2 col-form-label"  %>
  <div class="col-xs-10">
      <%=f.password_field :password_confirmation, class:"form-control" %>
  </div>
</div>

<div class="form-group row">
  <%=f.label :date_of_birth, class: "col-xs-2 col-form-label"  %>
  <div class="col-xs-10">
      <%=f.date_field :date_of_birth, class:"form-control" %>
  </div>
</div>

<div class="form-group row">
  <%=f.label :gender, class: "col-xs-2 col-form-label"  %>
  <div class="col-xs-10">
      <%=f.select :gender, %w(male female other)%>
  </div>
</div>

<div class="form-group row">
  <%=f.label :favorite_animal, class: "col-xs-2 col-form-label"  %>
  <div class="col-xs-10">
      <%=f.text_field :favorite_animal, class:"form-control" %>
  </div>
</div>

<%= f.submit "Get Started", class: "btn btn-default btn-primary" %>
<% end %>
